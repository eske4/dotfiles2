#!/bin/bash

{{ if eq .chezmoi.os "linux" -}}
    {{ if eq .chezmoi.osRelease.id "arch" -}}
        # Interactive prompt
        read -p ":: Arch Linux detected. Do you want to run the bootstrap script? (y/N): " confirm
        if [[ "$confirm" =~ ^[Yy]$ ]]; then
            echo ":: Starting bootstrap..."
            bash {{ joinPath .chezmoi.sourceDir "scripts/bootstrap-arch.sh" | quote }}
        else
            echo ":: Skipping bootstrap."
        fi
    {{ else -}}
        echo ":: Linux detected ({{ .chezmoi.osRelease.id }}). Skipping bootstrap."
    {{ end -}}
{{ end -}}

